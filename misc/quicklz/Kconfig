
config PKG_USING_QUICKLZ
    bool "QuickLZ : Fast data compression library"
    default n

if PKG_USING_QUICKLZ

    config PKG_QUICKLZ_PATH
        string
        default "/packages/misc/quicklz"
    
    config QLZ_COMPRESSION_LEVEL
        help 
            Set to 1, 2 or 3. Level 1 gives the fastest compression speed 
            while level 3 gives the fastest decompression speed.
        int "The level of compression"
        default 3
        range 1 3
        
    config QLZ_STREAMING_BUFFER
        help
            Set to 0 to disable streaming mode or to 100000 or 1000000 (suggested values) 
            to enable and make QuickLZ store a history buffer of QLZ_STREAMING_BUFFER bytes in size. 
        int "History buffer size of compression"
        default 0
    
    config QLZ_MEMORY_SAFE
        help
            If enabled, decompression of corrupted data cannot crash.
        bool "Enable safe compression"
        default y
        
    choice
        prompt "QuickLZ version"
        help
            Select the QuickLZ version

        config PKG_USING_QUICKLZ_LATEST_VERSION
            bool "latest_version"
            
        config PKG_USING_QUICKLZ_V100
            bool "v1.0.0"

    endchoice
    
    if PKG_USING_QUICKLZ_V100
        config PKG_QUICKLZ_VER
        string
        default "v1.0.0"
    endif
   
    if PKG_USING_QUICKLZ_LATEST_VERSION
       config PKG_QUICKLZ_VER
       string
       default "latest_version"    
    endif

endif
