
config PKG_USING_WEB_TERMINAL
    bool "WebTerminal: Terminal runs in a Web browser"
    default n

if PKG_USING_WEB_TERMINAL

    config PKG_WEB_TERMINAL_PATH
        string
        default "/packages/iot/web_terminal"
    
    config PKG_WEB_TERMINAL_VER
        string
        default "0.1.2"

    select PKG_USING_MONGOOSE

    config PKG_WEB_TERMINAL_PORT
        string
        prompt "The port number for Web terminal"
        default "8090"

endif
