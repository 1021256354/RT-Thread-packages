
config PKG_USING_CJSON
    bool "Ultralightweight JSON parser in ANSI C"
    default n

if PKG_USING_CJSON

    config PKG_CJSON_PATH
        string
        default "/packages/iot/cJSON"

    select PKG_CJSON_PATH

    config PKG_CJSON_VER
        string
        default "v1.0.1"

    select PKG_CJSON_VER

endif
