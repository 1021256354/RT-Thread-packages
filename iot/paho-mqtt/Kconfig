config PKG_USING_PAHO-MQTT
    bool "A mqtt package"
    default n

if PKG_USING_PAHO-MQTT

    config PKG_PAHO-MQTT_PATH
        string
        default "/packages/iot/paho-mqtt"

    select PKG_PAHO-MQTT_PATH

    config PKG_PAHO-MQTT_VER
        string
        default "v1.0.0"

    select PKG_PAHO-MQTT_VER

endif
