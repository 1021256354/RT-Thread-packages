config PKG_USING_JERRYSCRIPT
    bool "Ultra-lightweight JavaScript engine for the Internet of Things."
    default n

if PKG_USING_JERRYSCRIPT

    config PKG_JERRYSCRIPT_PATH
        string
        default "/packages/language/jerryscript"

    select PKG_JERRYSCRIPT_PATH

    config PKG_JERRYSCRIPT_VER
        string
        default "v0.0.1"

    select PKG_JERRYSCRIPT_VER

endif
